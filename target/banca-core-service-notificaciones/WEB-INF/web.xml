<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
	
	<display-name>banca-core-service-notificaciones</display-name>
	
	<!-- Application Configuration resource URL -->
	<context-param>
		<param-name>appConfigURL</param-name>
		<param-value>classpath:mx/com/vepormas/banca/resources/application-config.properties</param-value>
	</context-param>
	
	<!-- Spring Application context resource URL -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath:mx/com/vepormas/banca/resources/context/application-context.xml</param-value>
	</context-param>
	
	<!-- Spring context loader listener -->
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	
	<!-- Application context listener -->
	<listener>
		<listener-class>mx.com.vepormas.banca.lib.listener.impl.ServletContextListenerImpl</listener-class>
	</listener>
	
	<!-- Spring Dispatch Message Servlet -->
	<servlet>
		<servlet-name>spring-ws</servlet-name>
		<servlet-class>org.springframework.ws.transport.http.MessageDispatcherServlet</servlet-class>
		<init-param>
			<param-name>transformWsdlLocations</param-name>
			<param-value>true</param-value>
		</init-param>
		<init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value></param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>spring-ws</servlet-name>
		<url-pattern>/*</url-pattern>
	</servlet-mapping>
	
</web-app>
